<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_small_bold">
        <item name="android:textColor">@color/background_primary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>

    </style>

    <style name="text_regular">
        <item name="android:textColor">@color/support_light</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="heading">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/background_primary</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>


    <style name="text_small">
        <item name="android:textColor">@color/support_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_small_bold_grey">
        <item name="android:textColor">@color/support_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_small_grey">
        <item name="android:textColor">@color/support_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

</resources>