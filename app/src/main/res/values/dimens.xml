<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Texts -->
    <dimen name="text_small" tools:keep="@dimen/text_small">15sp</dimen>
    <dimen name="text_regular" tools:keep="@dimen/text_regular">18sp</dimen>

    <!-- General -->
    <dimen name="default_elevation" tools:keep="@dimen/default_elevation">@dimen/half_column</dimen>
    <dimen name="divider_size" tools:keep="@dimen/divider_size">1dp</dimen>

    <!-- Riding experience -->
    <dimen name="booking_top_details_layout_height" tools:keep="@dimen/booking_top_details_layout_height">80dp</dimen>
    <dimen name="booking_bottom_details_layout_height" tools:keep="@dimen/booking_bottom_details_layout_height">164dp</dimen>
    <dimen name="booking_general_margin">18dp</dimen>

    <!-- Grid Layout Values -->
    <dimen name="half_column" tools:ignore="UnusedResources">4dp</dimen>
    <dimen name="one_column" tools:ignore="UnusedResources">8dp</dimen>
    <dimen name="one_and_a_half_column" tools:ignore="UnusedResources">12dp</dimen>
    <dimen name="two_column" tools:ignore="UnusedResources">16dp</dimen>
    <dimen name="three_column" tools:ignore="UnusedResources">24dp</dimen>
    <dimen name="four_column" tools:ignore="UnusedResources">32dp</dimen>
</resources>